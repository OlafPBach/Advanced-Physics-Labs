#include <Wire.h>
#include <Adafruit_BMP085.h>
#define seaLevelPressure_hPa 1013.25;
const float TwoPi = 6.28318530718 ;
//These constants are to make the volume component functional however, I can't callibrate the constants as my arduino won't work
Adafruit_BMP085 bmp;
void setup() {
  Serial.begin(9600);
  if (!bmp.begin()) {
  Serial.println("Could not find a valid BMP085 sensor, check wiring!");
  while (1) {}
  }
}
  
void loop() {
    float(Temperature) = bmp.readTemperature()+273.15;
    float(Pressure) = bmp.readPressure();
    int VolumeRaw = (analogRead(A0));
    int A = 0;
    int B = 0;   
    //A and B are integers that I can only figure out the values of by running tests.
    float(Volume) = TwoPi * 0.004 * (A*VolumeRaw + B);
    int Total = Pressure * Volume / Temperature;
    int Time = millis()/1000;
    Serial.print(Temperature);
    Serial.print(',');
    Serial.print(Pressure);
    Serial.print(',');
    Serial.print(Volume);
    Serial.print(',');
    Serial.print(Total);
    Serial.print(',');
    Serial.println(Time);
    delay(500);
}
